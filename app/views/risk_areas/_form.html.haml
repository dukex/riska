    = f.text_field :address
  .field
    = f.label :neighborhood
    = f.text_field :neighborhood
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :resident
    = f.text_field :resident
